@model SellerDto
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Seller</h2>

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">SellerType</label>
                <div class="col-sm-8">

                    <select class="form-select form-select-sm-8" asp-for="seller_type_roles" aria-label=".form-select-sm example">
                        <option selected ></option>
                        <option value="Broker">Broker</option>
                        <option value="PS/QC/ISM">PS/QC/ISM</option>
                        <option value="Marketing Officer">Marketing Officer</option>
                        <option value="Marketing Manager">Marketing Manager</option>
                        <option value="Deputy Marketing Director">Deputy Marketing Director</option>
                        <option value="Marketing Director">Marketing Director</option>
                        
                        <span asp-validation-for="seller_type_roles" class="text-danger"></span>
                        
                    </select>
                   
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">SellerLevel</label>
                <div class="col-sm-8">


                    <select class="form-select form-select-sm-8" placeholder="Roles" asp-for="seller_level" aria-label=".form-select-sm example">
                        <option selected ></option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>

                        <span asp-validation-for="seller_level" class="text-danger"></span>

                    </select>
                    

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">SellerBp</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="seller_buyer_reference">
                    <span asp-validation-for="seller_buyer_reference" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Full Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="fullname">
                    <span asp-validation-for="fullname" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Reporting To</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="reporting_to">
                    <span asp-validation-for="reporting_to" class="text-danger"></span>



                </div>
            </div>
            <div class="row"> 
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="sellers" asp-action="Index" role="button">Cancel</a>
                    </div>

            </div>
        </form>

    </div>

</div>
